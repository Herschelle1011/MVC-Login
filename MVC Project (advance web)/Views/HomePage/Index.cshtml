    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark custom-navbar py-3 fixed-top">
    <div class="container-fluid px-5">

        <a class="navbar-brand fw-bold text-white" href="#">LR</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav gap-4 fw-semibold">
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">CONTROLLERS</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">ACCESSORIES</a>
                </li>
                <li class="nav-item">
