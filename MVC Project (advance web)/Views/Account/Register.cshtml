@model MVC_Project__advance_web_.ViewModels.RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "_LoginLayout";
}

<div class="container-box-Login">

    <div class="img-top">
        <div class="Message">
            <h2>CREATE YOUR<br>ACCOUNT</h2>
            <p class="text">Join us today and<br> experience secure access</p>
        </div>
    </div>

    <div class="elements register-elements">

        <h2 class="title">USER REGISTER</h2>
        <p class="welcome-text">Create your account</p>


        @* POST REGISTER METHOD IN CONTROLLER *@

        <form asp-action="Register" asp-controller="Account" method="post">

            @* Email *@
            <div class="input-with-icon">
                <i class="bi bi-person-fill text-white"></i>
                <input class="form-control text-white" asp-for="Email" placeholder="Email" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>

            @* Password *@    
        <div class="input-with-icon">
                <i class="bi bi-lock-fill text-white"></i>
                <input asp-for="Password" class="form-control text-white" placeholder="Password" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>



    <div class="input-with-icon">
        <i class="bi bi-lock-fill text-white"></i>
        <input asp-for="ConfirmPassword" class="form-control text-white" placeholder="Confirm Password" />
    </div>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
         
            <a asp-action="Login" asp-controller="Account">Already have an account?</a>

            <button type="submit" class="btn btn-primary mt-3">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
